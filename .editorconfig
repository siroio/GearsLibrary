root = true

# CMakeLists.txt ファイルに適用する設定
[CMakeLists.txt]
indent_style = space
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true
end_of_line = crlf

# ソースコードファイルに適用する設定
[*.{cpp,c,h,hpp}]
indent_style = space
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true
end_of_line = crlf